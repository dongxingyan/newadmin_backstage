main-account-safety {
  width: 100%
  height: 100%
  .ml20 {
    margin-left: 20px;
  }
  .main {
      .box{
          .error-tip{
            color: #f00;
            font-size: 12px;
            position: absolute;
            line-height: 15px;
          }
          .is-error{
                border-color: #f56c6c;
          }
          .form-group{
              position: relative;
          }

          > .login-alter{
              margin: 20px 0 0 20px;
              height: 36px;

              span{
                  display:inline-block;
                  &+span{
                      margin-left: 20px;
                  }
              }
              .green{
                  cursor: pointer;
                  color:rgba(29,148,245,1);
              }
              .warn{
                  color:rgba(243,111,109,1);
              }
              .alter-input{
                display: inline-block;
                width: 150px;
                height: 26px;
              }
          }

          > .login-info{
              margin: auto;
              min-width: 570px;
              margin-top: 60px;
              margin-bottom: 70px;

              .info-row{
                    height: 70px;
                    display: flex;
                    align-items: center;
                    position: relative;
                    justify-content: center;

                .row-span{
                    display: inline-block;

                    &+.row-span{

                    }
                    &:nth-child(1){
                      min-width: 40px;
                    }
                    &:nth-child(2){
                        font-size:14px;
                        min-width: 170px;
                        color:rgba(104,120,140,1);
                    }
                    &:nth-child(3){
                        margin-left: 22px;
                        min-width: 480px;
                        font-size:12px;
                        color:rgba(153,153,153,1);
                    }
                    &:nth-child(4){
                        cursor: pointer;
                        margin-left: 10px;
                        color:rgba(29,148,245,1);
                    }
                }
              }
          }

          .form{
              width: 250px;
              margin: auto;

              .code-input{
                  width: 145px;
              }

              .code-btn{
                  position: absolute;
                  top: 25px;
                  right: 0;
              }
              .code-btn-phone{
                  position: absolute;
                  top: 0;
                  right: 0;
              }

              .code-tip{
                  color:rgba(207,207,207,1);
                  font-size: 12px;
                  margin-top: 15px;
                  white-space: nowrap;
              }

              .error-tip{
                  color: red;
                  font-size: 12px;
                  position: absolute;
              }
          }
          hr {
            height: 1px;
            width: 96%;
            margin-left: 20px;
            margin-top: 0;
            margin-bottom: 0;
            border-top: none;
            background:rgba(0,0,0,0.05);
          }
      }

    .alerts{
      width: 300px;
      height: 210px;
      background:#fff;
      border-radius: 5px;
      .alert-head{
        height: 40px;
        background: #31a3dd;
        line-height: 40px;
        padding-left: 35px;
        color: #ffffff;
        font-size: 12px;
        position: relative;
        border-radius: 5px 5px 0px 0px;
        .img-right,.delet-right,.add-right,.page-right{
          position: absolute;
          right: 6px;
          top: 8px;
          height: 25px;
        }
      }
      .img-left{
        position: absolute;
        left: 10px;
        top: 10px;
        height: 21px;
      }
      .alert-content{
        height: 110px;
        line-height: 110px;
        text-align: center;
        font-size: 16px;

      }
      .alert-bottom span{
        display: inline-block;
        text-align: center;
        padding: 5px;
        height: 30px;
        width: 80px;
        cursor: pointer;
        border-radius: 5px;
      }
      .alert-sure,.delet-sure,.add-sure,.page-sure{
        background:#31a3dd;
        color: #fff;
      }
      .alert-bottom{
        text-align: center;
      }
    }
  }
}
