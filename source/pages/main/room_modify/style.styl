main-room-modify {
  width: 100%
  height: 100%
  .ml20 {
    margin-left: 20px;
  }
  .main {
    font-size: 12px;
    .title {
      font-size: 14px;
      height: 50px
      margin-left: 20px
      margin-top: 20px;
      line-height: 50px
      background: #fff;
      ul {
        list-style none
        .nav-icon {
          margin-left: 5px;
          margin-right: 5px;
        }
        li {
          float: left;
          a {
            text-decoration none;
            color: #09c;
          }
        }
      }
    }
    .join-participant-permission {
      display: flex;
      width: 200px;
      align-items: center;
      .checkList{
        margin-right:30px;
      }
      input {
        width: 19px;
        height: 19px;
        margin-right: 5px;
      }
      label {
        margin-top: 6px;
      }
    }
    .create-broadcast {
      display: flex;
      flex-direction: column;
      justify-content center;
      align-items center;
      background:#fff;
    }
    .box-room {
      height: 25px
      margin: 16px;
      .titleLeft{
        display: inline-block
        width: 130px
        height: 25px
        line-height: 25 px
        text-align right
        margin-right: 20px
        i {
          font-style normal
          color: red;
        }
      }
        .inputBox{
          width: 200px
          height: 30px
          padding-left: 5px;
        }
        .no{
          margin-left:30px;
        }
    }
      .describe{
        margin: 20px;
        display flex
        .titleLeft{
          display: inline-block
          width: 130px
          height: 25px
          line-height: 25 px
          text-align right
          margin-right: 20px;
        }
        .anotherName{
          //vertical-align top
          border: 1px solid #aaa
          width: 200px;
          height: 150px;
          overflow auto;
        }
      }

    .bottom {
      margin-bottom:20px;
      display flex
      justify-content center;
      .common {
        width: 140px
        height: 40px
        border-radius 5px
      }
      #save {
        margin-right: 30px
        background: #169BD5;
        border: none;
        color: #ffffff;
        cursor: pointer;
      }
      #cancel {
        border: 1px solid #aaa
        background: #fff;
        cursor: pointer;
      }
    }
  }
}