main-live-recording {
  width: 100%
  //height: 100%
  .ml20 {
    margin-left: 20px;
  }
  .main {
  //width: 100%
    position: relative
    height: 100%
    display: flex
  //background: pink;
    flex-direction column
    font-family: "Helvetica Neue", "Luxi Sans", "DejaVu Sans", Tahoma, "Hiragino Sans GB", STHeiti, "Microsoft YaHei";
    font-size: 14px;
    .video-modal-container {
      height: 500px !important;
      width: 500px !important;
    }
    .video-play-container {
      display: flex;
      justify-content center;
      align-items: center;
    }
    .feedback{
      z-index 2
      position absolute
      width: 100%
      height: 100%
      display: flex
      justify-content center
      align-items center
      background:rgba(0,0,0,.5)
    }
    .alerts{
      width: 300px;
      height: 210px;
      background:#fff;
      border-radius: 5px;
      .alert-head{
        height: 40px;
        background: #31a3dd;
        line-height: 40px;
        padding-left: 35px;
        color: #ffffff;
        font-size: 12px;
        position: relative;
        border-radius: 5px 5px 0px 0px;
        .img-right,.delet-right,.add-right,.page-right{
          position: absolute;
          right: 6px;
          top: 8px;
          height: 25px;
        }
      }
      .img-left{
        position: absolute;
        left: 10px;
        top: 10px;
        height: 21px;
      }
      .alert-content{
        height: 110px;
        line-height: 110px;
        text-align: center;
        font-family: "微软雅黑";
        font-size: 16px;

      }
      .alert-bottom span{
        display: inline-block;
        text-align: center;
        padding: 5px;
        height: 30px;
        width: 80px;
        cursor: pointer;
        border-radius: 5px;
      }
      .alert-sure,.delet-sure,.add-sure,.page-sure{
        background:#31a3dd;
        color: #fff;
      }
      .alert-bottom{
        text-align: center;
      }
    }

    .title {
      overflow: auto;
      font-size: 14px;
      //height: 50px
      margin:0 30px;
      line-height: 34px
      background: #fff;
      box-shadow 0 2px 2px 0 #ccc
      .nav-record{
        list-style none;
      }
      .no-data-tip {
        display: flex;
        align-items center
        justify-content center
        height: 200px;
      }
      ul {
        background: #ffffff !important;
        li {
          a {
            background: #ffffff !important;
          }
        }
      }
      .recording{
        background:#F2F2F2
      }
      .nav-active {
        color: #ffffff;
        background-color: #fff;
        border-color: #ddd #ddd transparent;
        border-right-width: 2px;
        background: #09c;
      }
    }
      .top{
        height: 40px
        margin-left:20px;
        margin-top:20px;
        display flex
        justify-content space-between
        .top-left {
          display: flex;
        }
        .broadcastName{
          width: 240px
          margin-left:10px;
          height: 34px;
          padding-left: 10px;
        }
          .search{
            margin-left:10px;
            background #0099CC
            border-radius 5px;
            border:none;
            color:#fff;
            cursor pointer;
            height: 34px;
            width: 50px;
          }
            .create{
              margin-right:30px;
              background:#0099CC;
              border-radius 5px;
              border:none;
              color:#fff;
              cursor pointer;
              height: 34px;
            }
      }
    .list {
      margin: 20px;
      display: flex
      justify-content space-between
      table {
        //width: 100%
        flex 1

      }
      tr, td, th {
        text-align center
        padding: 0 5px;
        border: 1px solid #d3d8dc
        border-collapse: collapse
        vertical-align middle
        flex 1
        .live-operation-item-container {
          display: flex;
          justify-content space-around;
          color: #09c;
          cursor: pointer;
        }
        .file-size-list {
          padding 0;
          div {
            border-top: 1px solid #cccccc
          }
        }
        .file-operation-list {
          display: flex;
        }
        .operation-item-container {
          padding: 0;
          .operation-item {
            display: flex;
            justify-content space-around
            align-items center
            border-top: 1px solid #cccccc
          }
          a {
            text-decoration none;
            color: #09c;
          }
          div {
            cursor: pointer;
            color: #09c;
          }
        }
      }
        th{
          height: 35px
          background #F5F6FA
        }
      td {
        height: 35px
        font-size:12px
      }
      tr:nth-child(odd) {
        background: #F5F6FA
      }
      tr:nth-child(even) {
        background #ffffff
      }
    }

    .paging {
      height: 28px
      line-height: 28px
      display flex
      justify-content: center
      margin-bottom: 20px;
      i{
        font-style normal
        color:red;
      }
      .page-common {
        font-size: 12px
        display: block
        width: 30px
        height: 28px
        line-height: 26px
        text-align center
        border: 1px solid #aaaaaa
        margin-right: 5px;
        color: #393f51
        cursor pointer
      //border-radius 5px;
      }
      .before {
        margin-left: 10px;
      }
      .after {
        margin-right: 20px;
      }
      .bg {
        background-color: rgba(128, 128, 128, .3)
        border: none;
      }
      ul {
        padding-left: 0;
      }
      li {
        float: left;
      }
      .page-common:hover {
        background: #ccc;
      }
      .pageNum {
        list-style none
      }
      .current {
        background: #0099CC
        border: none
      }
      .skip{
        width: 41px
        height: 28px
        line-height: 26px
        border: 1px solid #aaaaaa
        margin-right: 5px;
        color: #393f51
        text-align: center
      }
      .skipButton{
        color: #ffffff;
        width: 40px
        height: 28px
        text-align center
        cursor pointer
        background:#0099CC
      }

    }
  }
}