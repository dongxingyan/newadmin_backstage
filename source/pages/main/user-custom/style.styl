main-user-custom {
  width: 100%
  height: 100%
  .ml20 {
    margin-left: 20px;
  }
  .main {
    position relative
    // height: 100vh;
    display: flex
    flex-direction column
    font-family: "Helvetica Neue", "Luxi Sans", "DejaVu Sans", Tahoma, "Hiragino Sans GB", STHeiti, "Microsoft YaHei";
    font-size: 14px;
    /* modal content */
    .modal{
      .modal-dialog{
          width: 400px;
          top: 50%;
          transform: translateY(-50%);
        }

      .modal-body{
          text-align: center;
      }

      .content{
          text-align: center;
          height: 110px;
          display: flex;
          align-items: center;
          justify-content: center;
      }
    }
  }

  .custom-box{
    margin-top: 10px;

    .custom-card{
        display: inline-block;
        margin: 40px 22px 20px;
        position: relative;

        .no-open{
            color: #fe0000;
            font-size: 12px;
            line-height: 2;
        }

        .card-info{
            position: absolute;
            top: 150px;
            bottom: 0;
            left: 23px;
            right: 5px;
            background: none;
            .pc-mac {
              margin-right: 20px;
            }
            .info-title{
                color: #000000;
                white-space: nowrap;
                text-overflow: ellipsis;
                overflow: hidden;
                .vertical-bar{
                    position: absolute;
                    left: -12px;
                    top: 3px;
                }
            }

            .info-version{
                font-size: 12px;
                color: #909090;
                margin-top: 10px;
                display: flex;
                align-items: flex-start;

                a {
                    position: relative;
                    top: 2px;
                    &:hover {
                        text-decoration: none;
                    }
                }
            }

            .new-version{
                font-size: 12px;
                line-height: 1.5;

                .new-version-img{
                    margin-right: 10px;
                }
            }

        }
    }
  }

}
