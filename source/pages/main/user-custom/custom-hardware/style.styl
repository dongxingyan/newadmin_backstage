.main-hardware {
  .hardware-header {
    background: #ffffff;
    color: #000;
    font-size: 14px;
    padding-left: 20px;
    height: 54px;
    line-height: 54px;
    display: flex;
    margin-left: 15px;
    border-radius: 5px;
    margin-right: 30px;
    .title {
      width: 15%;
      display: flex;
      align-items: center;
      min-width: 150px;
      .icon {
        background: #1d94f5;
        width: 5px;
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        height: 18px;
        margin-right: 8px;
      }
      .name {

      }
    }
    .module {
      width: 80%;
      display: flex;
      .active {
        border-bottom: 2px solid #1d94f5;
      }
      div {
        margin-right: 8%;
        cursor: pointer;
      }
      div:hover {
        border-bottom: 2px solid #1d94f5;
        color: #454646;
      }
    }
  }
  .hardware-body {
    background: #fff;
    margin-left: 15px;
    margin-right: 30px;
    border-radius: 5px;
    padding: 20px;
    margin-top: 10px;
  }
}