          }
          .table-content {
            border-bottom: 1px solid #ddd;
            height: 50px;
            input {
              border: none;
              height: 30px;
              width: 100px;
            }
            .select-btn {
              width: 70px;
              height: 28px;
              border: 1px solid #1d92f2;
              color: #1d92f2;
              -webkit-border-radius: 5px;
              -moz-border-radius: 5px;
              border-radius: 5px;
              line-height: 28px;
              text-align: center;
              cursor: pointer;
            }
            .select-btn:hover {
              background: #1d92f2
              color: #ffffff;
            }
          }
        }
        .add-module {
          margin-top: 10px;
          cursor: pointer;
        }
        .delete-btn {
          color: #f36f6d;
          cursor: pointer;
        }
        .delete-btn:hover {
          color: red;
        }
        .save-btn {
          color: #ffffff;
          background: #1d92f2;
          border: 1px solid #1d92f2;
          height: 30px;
          line-height: 30px;
          width: 70px;
          text-align: center;
          cursor: pointer;
          -webkit-border-radius: 4px;
          -moz-border-radius: 4px;
          border-radius: 4px;
          margin-top: 30px;
          margin-bottom: 30px;
          margin-left: 498px;
        }
        .save-btn:hover {
          background: rgba(23, 149, 248, 1);
        }
      }
    }
