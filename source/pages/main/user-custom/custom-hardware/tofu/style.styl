  .tofu-create-modal {
    .modal-content {
      width: 600px;
      .modal-header {
        border-bottom: none;
        height: 50px;
        line-height: 50px;
        .modal-title {
          font-size: 16px;
          color: #727272
        }
      }
      .modal-body {
        .operation {
          display: flex;
          align-items: center;
          border-bottom: 1px solid #ddd;
          padding-bottom: 15px;
          font-size: 12px;
          .label {
            color: #000;
            font-weight: bold;
          }
          select, input {
