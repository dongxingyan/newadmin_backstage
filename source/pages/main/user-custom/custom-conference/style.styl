.conference-header {
  .file-input {
    position: absolute;
    z-index: -100;
    display: none;
  }
  background: #ffffff;
  color: #000;
  font-size: 14px;
  padding-left: 20px;
  height: 54px;
  line-height: 54px;
  display: flex;
  margin-left: 15px;
  border-radius: 5px;
  margin-right: 30px;
  .title {
    width: 15%;
    display: flex;
    align-items: center;
    min-width: 150px;
    .icon {
      background: #1d94f5;
      width: 5px;
      -webkit-border-radius: 5px;
      -moz-border-radius: 5px;
      border-radius: 5px;
      height: 18px;
      margin-right: 8px;
    }
    .name {

    }
  }
  .info {
    display: flex;
    align-items: center;
    img {
      width: 13px;
      height: 13px;
      margin-right: 8px;
    }
    div {
      color: #787878;
      font-size: 10px;
    }
  }
}
.conference-body {
  background: #fff;
  margin-left: 15px;
  margin-right: 30px;
  border-radius: 5px;
  padding: 0 36px;
  margin-top: 10px;
  .item {
    display: flex;
    width: 100%;
    height: 120px;
    line-height: 120px;
    border-bottom: 1px solid #dddddd;
    .item-title {
      color: #000000;
      font-size: 12px;
      width: 10%;
    }
    .img-container {
      width: 25%;
      height: 120px;
      line-height: 120px;
      display: flex;
      align-items: center;
      justify-content: center;
      .logo {
        background: #ddd;
        width: 40px;
        height: 40px;
      }
      .wait, .background {
        background: #ddd;
        width: 137px;
        height: 78px;
      }
      .call {
        background: #ddd;
        width: 70px;
        height: 100px;
      }
    }
    .item-oper {
      display: flex;
      flex-direction: column;
      width: 60%;
      margin-left: 30px;
      .tip {
        color: #787878;
        height: 64px;
        line-height: 70px;
        font-size: 10px;
      }
      .upload-btn {
        color: #1d94f5;
        border: 1px solid #1d94f5;
        width: 100px;
        height: 27px;
        line-height: 27px;
        text-align: center;
        cursor: pointer;
        -webkit-border-radius: 4px;
        -moz-border-radius: 4px;
        border-radius: 4px;
        font-size: 10px;
      }
      .upload-btn:hover {
        background: #1d94f5;
        color: #ffffff;
      }
    }
  }
  .item:last-child {
    border-bottom: none;
  }
}
.conference-footer {
  margin-left: 15px;
  margin-right: 30px;
  margin-top: 20px;
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20px;
  .save-btn {
    background: #1d94f5;
    width: 100px;
    color: #fff;
    text-align: center;
    border-radius: 4px;
    height: 36px;
    line-height: 36px;
    cursor: pointer;
  }
  .save-btn:hover {
    opacity: 0.7;
  }
}