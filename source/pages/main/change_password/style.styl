main-change-password {
  width: 100%
  height: 100%
  .ml20 {
    margin-left: 20px;
  }
  .main {
  //width: 100%
    position relative
    height: 100vh;
    display: flex
  //background: pink;
    flex-direction column
    font-family: "Helvetica Neue", "Luxi Sans", "DejaVu Sans", Tahoma, "Hiragino Sans GB", STHeiti, "Microsoft YaHei";
    font-size: 14px;
    .feedback{
      z-index 2
      position absolute
      width: 100%
      height: 100%
      display: flex
      justify-content center
      align-items center
      background:rgba(0,0,0,.5)
    }
    .alerts{
      width: 300px;
      height: 210px;
      background:#fff;
      border-radius: 5px;
      .alert-head{
        height: 40px;
        background: #31a3dd;
        line-height: 40px;
        padding-left: 35px;
        color: #ffffff;
        font-size: 12px;
        position: relative;
        border-radius: 5px 5px 0px 0px;
        .img-right,.delet-right,.add-right,.page-right{
          position: absolute;
          right: 6px;
          top: 8px;
          height: 25px;
        }
      }
      .img-left{
        position: absolute;
        left: 10px;
        top: 10px;
        height: 21px;
      }
      .alert-content{
        height: 110px;
        line-height: 110px;
        text-align: center;
        font-family: "微软雅黑";
        font-size: 16px;

      }
      .alert-bottom span{
        display: inline-block;
        text-align: center;
        padding: 5px;
        height: 30px;
        width: 80px;
        cursor: pointer;
        border-radius: 5px;
      }
      .alert-sure,.delet-sure,.add-sure,.page-sure{
        background:#31a3dd;
        color: #fff;
      }
      .alert-bottom{
        text-align: center;
      }
    }

      .form{
        margin:20px;
        flex 1;
        span{
          width: 150px
          display inline-block
          text-align right
        }
        .inputBox{
          width: 500px
          height: 35px
          line-height: 35px
          margin:20px auto 0;
        }
          .common{
            width: 210px
            height: 35px
          }
            .save{
              height: 30px
              width: 60px
              margin:0 auto
              input{
                height: 30px
                width: 70px
                margin-top:20px;
                background #31A3DD
                border none
                cursor pointer
                color:#fff;
              }
            }

      }

  }
}