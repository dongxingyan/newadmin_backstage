login {
  @font-face {
    font-family: 'iconfont';  /* project id 247379 */
    src: url('https://at.alicdn.com/t/font_c70m7wid6cuzbyb9.eot');
    src: url('https://at.alicdn.com/t/font_c70m7wid6cuzbyb9.eot?#iefix') format('embedded-opentype'),
            url('https://at.alicdn.com/t/font_c70m7wid6cuzbyb9.woff') format('woff'),
            url('https://at.alicdn.com/t/font_c70m7wid6cuzbyb9.ttf') format('truetype'),
            url('https://at.alicdn.com/t/font_c70m7wid6cuzbyb9.svg#iconfont') format('svg');
  }
  .iconfont {
    font-family: "iconfont";
    font-size: 18px;
    margin-right: 10px;
    font-style: normal;
    color: #AEB9C2;
  }
  a {
    text-decoration: none;
    color: rgb(43, 50, 69);
  }
  .pf55 {
    padding-left: 55px;
  }
  .pr {
    position: relative;
  }
  .content {
    width: 100%;
    height: 100vh;
    background-size cover;
    .logo {
      position fixed;
      left: 40px;
      top: 26px;
      width: 220px;
      height: 60px;
      background: url("../../static/images2/logo.png") no-repeat;
      background-size: 100%;
    }
    .container {
      height: 100%;
      display: -webkit-box; /* 老版本语法: Safari, iOS, Android browser, older WebKit browsers. */
      display: -moz-box; /* 老版本语法: Firefox (buggy) */
      display: -ms-flexbox; /* 混合版本语法: IE 10 */
      display: -webkit-flex; /* 新版本语法: Chrome 21+ */
      display: flex;
      -webkit-box-pack: center;
      -moz-justify-content: center;
      -webkit-justify-content: center;
      justify-content: center;
      -webkit-box-align: center;
      -moz-align-items: center;
      -webkit-align-items: center;
      align-items: center;
      .left {
        width: 447px
        height: 200px
        background url("../../static/images1/title.png") left top no-repeat
        background-size 100%
      }
      .right {
        width: 380px
        height: 400px
        border-radius: 2px;
        position: relative;
        background-color: rgba(251, 251, 251, 1);
        .logo-flex {
          display: -webkit-box;
          display: -ms-flexbox;
          display: flex;
          -webkit-box-pack: center;
          -ms-flex-pack: center;
          justify-content: center;
          -webkit-box-align: center;
          -ms-flex-align: center;
          align-items: center;
          width: 380px;
          height: 128px;
          padding: 10px;
          .logo-img {
            max-width: 360px;
            max-height: 108px;
          }
        }
        .login-tip {
          display: inline-block;
          width: 340px;
          //height: 25px;
          line-height: 25px
          margin-left: 20px;
          text-align: center;
          color: red;
          background: pink;
        }
        .login-tip-opacity {
          opacity: 0;
        }
        .iconfont {
          position absolute;
          top: 0;
          left: 0;
        }
        .input-box {
          margin: 30px 20px 0;
        }
        .input-common {
          width: 340px;
          height: 40px;
          border-radius 5px;
          border: none;
        }
        .common::before {
          display: block;
          position: absolute;
          width: 29px;
          height: 26px;
        }
        .user-name {
          margin-top: 5px;
        }
        .user-name::before {
          top: 8px;
          left: 17px;
          content: url("../../static/images1/user.png");
        }
        .password::before {
          bottom: 8px;
          left: 17px;
          content: url("../../static/images1/password.png");
        }
        .login-btn {
          background: #5EC724;
          color: #fff;
          cursor pointer;
        }
      }
    }
  }
}
